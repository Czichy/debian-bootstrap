#!/bin/bash

# Update OS
sudo apt-get -y update
sudo apt-get -y upgrade
sudo apt-get -y autoremove

# Redirect your linux user to your windows user.
# vi /etc/passwd
# gary:x:1000:1000:,,,:/mnt/c/Users/gary:/bin/bash

# VcXsrv for Copy & Paste
# Note: Use Power Shell with Administrator rights.
# choco install -y vcxsrv

# Install xsel for Copy and Paste
sudo apt-get install -y xsel
sudo apt-get install -y vim-gtk

# Install git
# sudo apt-get install -y git
# git config --global user.name Traap
# git config --global user.email gary.a.howard@mac.com

# Install ruby and required gems
# Is sudo really needed?
sudo apt-get install -y ruby-full
sudo gem install bundler

# Clone and build emend. 
mkdir git
cd git
clone http://github.com/Traap/emend.git
cd emend
bundle install
bundle exec rake
bundle exec rake install
rake --format documentation

# Clone and emend this system. 
cd ..
clone http://github.com/Traap/emend-computer.git
cd emend-computer

# Windows setup.
# Note:  Only linux commands are ran when run from a wsl distro.
emend --verbose --nodryrun --bundle debian 
